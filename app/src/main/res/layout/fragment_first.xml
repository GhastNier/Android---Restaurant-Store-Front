<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:contentDescription="@string/restaurant_items"
        tools:layout_editor_absoluteX="-3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/antepasto_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:clickable="true"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="@string/antipasto"
                        android:scaleType="centerCrop"
                        android:src="@drawable/antepasto"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.6"
                        android:background="@color/secondaryDarkColor"
                        app:layout_constraintBottom_toBottomOf="@id/imageView3"
                        tools:layout_editor_absoluteY="162dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/antipasto"
                        android:textAlignment="textStart"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/imageView3"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="162dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/steak_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@id/antepasto_const">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="@string/steak"
                        android:scaleType="centerCrop"

                        android:src="@drawable/steak"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.6"
                        android:background="@color/secondaryDarkColor"
                        app:layout_constraintBottom_toBottomOf="@id/imageView4"
                        tools:layout_editor_absoluteY="162dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/steak"
                        android:textAlignment="textStart"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/imageView4"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="162dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pasta_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/steak_const">

                    <ImageView
                        android:id="@+id/pasta_img"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="@string/pasta"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pasta"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.6"
                        android:background="@color/secondaryDarkColor"
                        app:layout_constraintBottom_toBottomOf="@id/pasta_img"
                        tools:layout_editor_absoluteY="162dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/fresh_pasta"
                        android:textAlignment="textStart"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/pasta_img"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="162dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pizza_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@id/pasta_const">

                    <ImageView
                        android:id="@+id/pizza_img"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="@string/pizza"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.6"
                        android:background="@color/secondaryDarkColor"
                        app:layout_constraintBottom_toBottomOf="@id/pizza_img"
                        tools:layout_editor_absoluteY="162dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/pizza"
                        android:textAlignment="textStart"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/pizza_img"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="162dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tiramisu_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@id/pizza_const">

                    <ImageView
                        android:id="@+id/tiramisu_img"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="@string/tiramisu"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tiramisu"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.6"
                        android:background="@color/secondaryDarkColor"
                        app:layout_constraintBottom_toBottomOf="@id/tiramisu_img"
                        tools:layout_editor_absoluteY="162dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/tiramisu"
                        android:textAlignment="textStart"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tiramisu_img"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="162dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>